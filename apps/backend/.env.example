# Postgres (trỏ sang container careerai_postgres)
DATABASE_URL=postgresql://postgres:123456@localhost:5433/career_ai

# Redis (nếu cần)
REDIS_URL=redis://localhost:6379/0

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback
FRONTEND_OAUTH_REDIRECT=http://localhost:3000/oauth/callback
ALLOWED_ORIGINS=http://localhost:3000
# Neo4j (nếu có)
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASS=pass

# Cho phép FE gọi API
ALLOWED_ORIGINS=http://localhost:3000

# AI models (đường dẫn tới package ai-core)
AI_MODELS_DIR=packages/ai-core/models

# Email verification (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password-here
SMTP_STARTTLS=true
EMAIL_FROM=your-email@example.com
FRONTEND_VERIFY_URL=http://localhost:3000/verify?token={token}
FRONTEND_RESET_URL=http://localhost:3000/reset?token={token}
EMAIL_DELIVERABILITY_REQUIRED=true
EMAIL_SMTP_PROBE_PORT=25
EMAIL_SMTP_PROBE_TIMEOUT=5

# Ngrok Domain (for testing payment callbacks)
NGROK_DOMAIN=https://your-subdomain.ngrok-free.dev
PUBLIC_BACKEND_URL=https://your-subdomain.ngrok-free.dev

# VNPay Configuration
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNPAY_RETURN_URL=https://your-subdomain.ngrok-free.dev/api/payment/vnpay/callback

# Momo Configuration
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api/create
MOMO_RETURN_URL=https://your-subdomain.ngrok-free.dev/api/payment/momo/callback
