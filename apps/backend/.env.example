# Postgres (trỏ sang container careerai_postgres)
DATABASE_URL=postgresql://postgres:123456@localhost:5433/career_ai

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Google OAuth (Get from Google Cloud Console)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback
FRONTEND_OAUTH_REDIRECT=http://localhost:3000/oauth/callback

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000

# Neo4j Graph Database
NEO4J_URL=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASS=your_neo4j_password

# AI models (đường dẫn tới package ai-core)
AI_MODELS_DIR=packages/ai-core/models

# SMTP for verification emails (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SSL=true
SMTP_STARTTLS=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@gmail.com
FRONTEND_VERIFY_URL=http://localhost:3000/verify?token={token}
EMAIL_DELIVERABILITY_REQUIRED=false
EMAIL_SMTP_PROBE_PORT=25
EMAIL_SMTP_PROBE_TIMEOUT=5

# O*NET API (Get from https://services.onetcenter.org/reference/)
ONET_V2_API_KEY=your_onet_api_key_here
ONET_V2_BASE_URL=https://api-v2.onetcenter.org
ONET_V2_TIMEOUT=30

# VNPay Payment Gateway (Sandbox - Replace with production keys)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret

# ZaloPay Payment Gateway (Sandbox - Replace with production keys)
ZALOPAY_APP_ID=your_zalopay_app_id
ZALOPAY_KEY1=your_zalopay_key1
ZALOPAY_KEY2=your_zalopay_key2
ZALOPAY_ENDPOINT=https://sb-openapi.zalopay.vn/v2/create
ZALOPAY_CALLBACK_URL=http://localhost:8000/api/payment/callback
ZALOPAY_REDIRECT_URL=http://localhost:3000/payment/return

# Google Gemini API for Chatbot (Get from Google AI Studio)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=models/gemma-3-4b-it
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7

# JWT Secret (Generate a secure random string)
SECRET_KEY=your_jwt_secret_key_here
